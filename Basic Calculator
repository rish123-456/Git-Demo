while True:

    choice=input("For Quitting(Q) otherwise press any key: " )
    if choice=='Q':
        break;
    try:
        first=int(input("Enter the first number: "))
        second=int(input("Enter the second number: "))

        operation = input("Choose the operation: ")

        match operation:
            case '+':
                print(first+second) 
            case '-':
                print(first-second) 
            case '*':
                print(first*second)
            case '/':
                print(first/second)
            case '%':
                print(first%second)
            case '**':
                print(first**second)
            case _:
                print("Invalid Operation")
    except:
        print("Invalid Input! Enter valid values of first and second")
